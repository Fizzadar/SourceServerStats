{% if is_dev %}
    server {
        location / {
            proxy_pass http://127.0.0.1:5000;
        }
    }
{% else %}
    server {
        charset utf-8;
        include uwsgi_params;

        location / {
            uwsgi_pass 127.0.0.1:5000;
            proxy_set_header X-Real-IP $remote_addr;
        }
    }
{% endif %}
